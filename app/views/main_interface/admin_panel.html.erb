<% content_for :admin do %>
    <script type="text/javascript">
        ShopifyApp.ready(function () {
            ShopifyApp.Bar.initialize({
                icon: '/mailfunnels-logo.jpg'
            });
        });
    </script>



    <%= javascript_include_tag 'triggers_manifest.js' %>
    <%= javascript_include_tag 'pages/admin_panel.js' %>
    <%= stylesheet_link_tag 'dashboard.css' %>

    <div class="hidden">
      <input id="current_app_id" type="number" value="<%= @app.id %>"/>
    </div>


    <div class="row">
      <div class="col-xs-12">
        <div class="page-title">
          <div class="title_left">
            <h3>MailFunnels <small>Admin Panel</small></h3>
          </div>


          <div class="title_right">
            <button id="mf_admin_add_user" class="btn btn-primary btn-border pull-right">
              <i class="fa fa-plus"></i> Add User
            </button>
          </div>

          <hr/>
          <div class="clearfix"></div>

        </div>
      </div>
    </div>

    <hr class="fade-2"/>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Users</h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <!-- Triggers Table -->
            <table id="users_table" class="table table-bordered text-center">

              <!-- Triggers Table Header -->
              <thead>
              <tr>
                <th class="text-center">ID</th>
                <th class="text-center">First Name</th>
                <th class="text-center">Last Name</th>
                <th class="text-center">Email</th>
                <th class="text-center">Action</th>
              </tr>
              </thead>
              <!-- END Hooks Table Header -->

              <!-- Hooks Table BODY -->
              <tbody>
              <% if @users.any? %>
                  <% @users.each do |user| %>

                      <tr>
                        <td><%= user.clientid %></td>
                        <td><%= user.first_name %></td>
                        <td><%= user.last_name %></td>
                        <td><%= user.email %></td>
                        <td style="width: 50px;">
                          <button class="btn btn-sm btn-primary btn-border mf_admin_user_info" data-id="<%= user.id %>"><i class="fa fa-plus"></i></button>
                        </td>
                      </tr>
                  <% end %>
              <% end %>

              </tbody>
              <!-- END Hooks Table BODY -->

            </table>
            <!-- END Hooks Table -->
          </div>
        </div>
      </div>

    </div>



    <!--View User Info Modal Start-->
    <div id="user_info_modal" class="modal fade bs-example-modal-sm">
      <div class="modal-dialog modal-md">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">User Info</h4>
          </div>

          <div class="modal-body">
            <div class="accordion" id="accordion" role="tablist" aria-multiselectable="true">

              <div class="panel">
                <a class="panel-heading" role="tab" id="headingOne" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                  <h4 class="panel-title">User Info</h4>
                </a>
                <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne" aria-expanded="true">
                  <div class="panel-body">
                    <table class="table table-striped">
                      <tbody>
                      <tr>
                        <th scope="row">Infusionsoft ID:</th>
                        <td id="view_user_inf_id">Loading...</td>
                      </tr>
                      <tr>
                        <th scope="row">First Name:</th>
                        <td id="view_user_first_name">Loading...</td>
                      </tr>
                      <tr>
                        <th scope="row">Last Name:</th>
                        <td id="view_user_last_name">Loading...</td>
                      </tr>
                      <tr>
                        <th scope="row">Email:</th>
                        <td id="view_user_email">Loading...</td>
                      </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>


            </div>
          </div>

        </div>

      </div>
    </div>
    <!--View User Info Modal End -->


    <div id="new_mf_user_modal" class="modal fade bs-example-modal-sm">
      <div class="modal-dialog modal-md">
        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Manually Add User</h4>
          </div>

          <form class="form-horizontal form-label-left">

            <div class="modal-body">

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Infusionsoft ID</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <input id="mf_new_user_inf_id" type="number" class="form-control" placeholder="Infusionsoft Client ID">
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">User Email</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <input id="mf_new_user_email" type="text" class="form-control" placeholder="User Email">
                </div>
              </div>


            </div>

            <div class="modal-footer">
              <button id="mf_new_user_submit" type="button" class="btn btn-success">Submit</button>
            </div>

          </form>

        </div>
      </div>
    </div>



<% end %>



